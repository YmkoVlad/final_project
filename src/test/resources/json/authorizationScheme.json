{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "location": {
      "type": "string"
    },
    "user": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "email": {
          "type": "string"
        },
        "phone": {
          "type": "object",
          "properties": {
            "phone": {
              "type": "string"
            },
            "confirmed": {
              "type": "boolean"
            }
          },
          "required": [
            "phone",
            "confirmed"
          ]
        },
        "name": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "email",
        "phone",
        "name"
      ]
    }
  },
  "required": [
    "location",
    "user"
  ]
}